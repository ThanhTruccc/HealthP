<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Doctor Image -->
        <ImageView
            android:id="@+id/img_doctor_admin"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/doctor_1" />

        <!-- Doctor Info -->
        <TextView
            android:id="@+id/tv_doctor_degree_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BS."
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_doctor_name_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phạm Thị Mai"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_doctor_experience_admin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10 năm"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_work"
                android:drawablePadding="4dp" />

            <TextView
                android:id="@+id/tv_doctor_rating_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.9 ⭐"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_dark" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <ImageButton
                android:id="@+id/btn_edit_doctor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/primary" />

            <ImageButton
                android:id="@+id/btn_delete_doctor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp"
                app:tint="@android:color/holo_red_dark" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>