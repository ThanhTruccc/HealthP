<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Doctor Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bác sĩ"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên bác sĩ"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background" />

        <!-- Degree -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Học vị"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_degree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_background" />

        <!-- Specialty -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyên khoa"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_specialty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_background" />

        <!-- Image -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ảnh đại diện"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_background" />

        <!-- Experience -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số năm kinh nghiệm"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 10"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background" />

        <!-- Rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá (0.0 - 5.0)"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: 4.5"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background" />
    </LinearLayout>
</ScrollView>