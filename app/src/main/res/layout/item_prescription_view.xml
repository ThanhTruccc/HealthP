<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#E3F2FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_medication_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paracetamol 500mg"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_dosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liều lượng: 1 viên/lần"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tần suất: 3 lần/ngày"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian: 5 ngày"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: 15 viên"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hướng dẫn: Uống sau ăn"
            android:textSize="12sp"
            android:textColor="#777777"
            android:textStyle="italic"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>