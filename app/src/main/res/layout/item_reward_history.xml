<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Action and Points -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icon Circle -->
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_primary" />

            <!-- Action Title -->
            <TextView
                android:id="@+id/tv_reward_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hoạt động"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginStart="12dp" />

            <!-- Points Change -->
            <TextView
                android:id="@+id/tv_reward_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10 điểm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_reward_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả chi tiết về hoạt động"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Footer Row: Time and Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Time Icon -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_time"
                app:tint="@color/text_hint" />

            <!-- Time -->
            <TextView
                android:id="@+id/tv_reward_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2024 10:30"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:layout_marginStart="4dp" />

            <!-- Total Points After Transaction -->
            <TextView
                android:id="@+id/tv_reward_total_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng: 100 điểm"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>