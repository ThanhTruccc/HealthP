<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ảnh bác sĩ -->
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/img_doctor_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor_1" />
        </androidx.cardview.widget.CardView>

        <!-- Họ tên -->
        <TextView
            android:id="@+id/tv_doctor_name_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="12dp" />

        <!-- Học vị -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_degree"
                android:layout_marginEnd="12dp"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tv_doctor_degree_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Học vị: PGS.TS."
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Chuyên khoa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_specialty"
                android:layout_marginEnd="12dp"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tv_doctor_specialty_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chuyên khoa: Nội khoa"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Nơi làm việc -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="12dp"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tv_doctor_workplace_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nơi làm việc: Bệnh viện Chợ Rẫy"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:maxLines="2" />
        </LinearLayout>

        <!-- Kinh nghiệm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_experience"
                android:layout_marginEnd="12dp"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tv_doctor_experience_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kinh nghiệm: 10 năm"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Đánh giá -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:layout_marginEnd="12dp"
                app:tint="#FFB300" />

            <TextView
                android:id="@+id/tv_doctor_rating_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đánh giá: 4.8/5.0 ⭐"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>