<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F0"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sức khỏe là vàng"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:padding="16dp"/>

        <!-- Apple Illustration -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/health_illustration"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp"/>

        <!-- Menu Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:id="@+id/menu_supply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_supply"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cung Dưỡng\nYêu Thương"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_exercise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_exercise"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theo dõi\nvận động"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_my_health"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_health"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sức khỏe\ncủa tôi"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_consultant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_consultant"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tư vấn\nsức khỏe"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Health Score Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFEEE8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHỈ SỐ SỨC KHỎE CỦA BẠN LÀ BAO NHIÊU ?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#D84315"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <com.example.healthprofile.HealthGaugeView
                        android:id="@+id/health_gauge_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_learn_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tìm hiểu ngay"
                    android:textColor="#FFFFFF"
                    android:background="@color/primary_red_dark"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="12dp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_challenge"
                app:tint="#FFC107" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thử thách sống khỏe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tv_view_all_challenges_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem tất cả >"
                android:layout_marginEnd="10dp"
                android:textSize="12sp"
                android:textColor="#E74C3C"
                android:textStyle="bold" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_challenges_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginBottom="24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            tools:listitem="@layout/item_challenge"/>

    </LinearLayout>
</ScrollView>