<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.HealthApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange_accent</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background_peach</item>

        <!-- Customize your theme here -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Button style -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppButton.Red">
        <item name="backgroundTint">@color/primary_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppButton.Outlined">
        <item name="strokeColor">@color/divider_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Tab Text Style -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>