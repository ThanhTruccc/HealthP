<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền trắng -->
    <solid android:color="@color/white" />

    <!-- Viền ngoài -->
    <stroke
        android:width="1dp"
        android:color="@color/divider_gray" />

    <!-- Bo góc -->
    <corners android:radius="8dp" />

    <!-- Khoảng cách trong -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
